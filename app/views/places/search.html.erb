<div class="picture-set">
    <img class="fuji" src="/assets/hJEydLyOYEeZMLG1609402530_1609402593.jpg">
    <p class="newest-post">検索: <%= params[:q][:prefecture_or_spot_or_detail_cont] %></p>
</div>


<div class="container mx-auto" style="width: 90vw">
    <div class="row">
        <div class="col-12 col-md-3">
            <div class="left-side">
                <%= search_form_for(@q, url: search_places_path) do |f| %>
                    <p class="mb-2">都道府県・地名で探す</p>
                    <div class="form-group" style="width: 280px;">
                        <%= f.search_field :prefecture_or_spot_or_detail_cont, :placeholder => "Spot your place!!", class: 'form-control' %>
                    </div>
                    
                    <%= f.submit 'Search', class: 'btn btn-primary' %>
                <% end %>
            </div>
        </div>
        <div class="col-12 col-md-9">
            <ul>
                <% @places.each do |place| %>
                    <%= link_to (place_path(place)), data: {"turbolinks" => false} do %>
                        <li class="place border-bottom">
                            <div class="d-flex">
                                <div class="col-4">
                                    <p><%= place.pictures.build %></p>
                                </div>
                                <div class="col-8">
                                    <p><%= place.spot %></p>
                                    <p><%= place.address %></p>
                                    <p class="review-rating" data-score="<%= place.rate %>"></p>
                                    <p style="word-wrap: break-word;"><%= place.detail %></p>
                                    
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>
                <%= paginate @places %>
            </ul>
        </div>
    </div>
</div>