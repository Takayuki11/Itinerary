<% if current_user.like?(other_place) %>
    <%= form_with(model: current_user.favorites.find_by(place_id: other_place.id), local: true, method: :delete, class: "d-inline") do |f| %>
      <%= hidden_field_tag :place_id, other_place.id %>
      <%= f.submit 'お気に入りを解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline") do |f| %>
      <%= hidden_field_tag :place_id, other_place.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-sm' %>
    <% end %>
<% end %>