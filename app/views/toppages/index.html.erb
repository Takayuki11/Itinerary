    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="find text-center">
            <div class="form-group">
                <%= f.text_field :spot, :placeholder => "Spot your place!!", class: 'search form-control' %>
            </div>
        
            <%= f.submit 'Search', class: 'btn btn-primary btn-search' %>
        </div>
    <% end %>
</div>

